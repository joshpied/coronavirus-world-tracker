{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": "error",
    "no-unused-vars": "off",
    "no-var": "error",
    "prefer-const": "error",
    "no-use-before-define": "error",
    "prefer-arrow-callback": "error",
    "no-implicit-globals": "error",
    "arrow-parens": ["error", "as-needed"]
  }
}
